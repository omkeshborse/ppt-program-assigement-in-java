<!DOCTYPE html>
<html>
<head>
<title>DOM Manipulation</title>
</head>
<body>
<div id="box" style="width: 300px; height: 300px; background-color: red;">
</div>
<script>
function changeColor() {
  var box = document.getElementById("box");
  box.style.backgroundColor = "yellow";
}

function doubleSize() {
  var box = document.getElementById("box");
  box.style.width = box.style.width * 2;
  box.style.height = box.style.height * 2;
}

document.getElementById("box").addEventListener("click", changeColor);
document.getElementById("box").addEventListener("click", doubleSize);
</script>
</body>
</html>

